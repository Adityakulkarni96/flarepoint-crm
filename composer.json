{
    "name": "bottelet/flarepoint",
    "description": "Flarepoint is a free, open-source and self-hosted CRM platform based of Laravel 5",
    "keywords": [
        "laravel",
        "CRM",
        "customer management",
        "Lead management",
        "customer relationship management"
    ],
    "authors": [
        {
            "name": "Casper Bottelet",
            "email": "cbottelet@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Jason Huebel",
            "email": "jason@huebel.dev",
            "role": "Contributor"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "laravel/framework": "5.8.*",
        "laravelcollective/html": "5.8.*@dev",
        "yajra/laravel-datatables-oracle": "~9.0",
        "guzzlehttp/guzzle": "^6.3",
        "pusher/pusher-php-server": "^3.4",
        "zizaco/entrust": "1.9.*",
        "laravel/tinker": "^1.0",
        "laravel/dusk": "^3.0",
        "doctrine/dbal": "^2.9",
        "barryvdh/laravel-debugbar": "~3.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.8",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~7.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "filp/whoops": "~2.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
